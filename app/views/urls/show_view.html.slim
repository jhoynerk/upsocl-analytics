.row.wrapper.border-bottom.white-bg.page-heading
  .col-sm-8
    h2 Campa&ntilde;a: {{ url.campaign.name }}
    ol.breadcrumb
      li
        a href="" ui-sref='campaigns()'  Inicio
      li
        a href='/' ui-sref="campaigns" Campa&ntilde;as
      li.active
        strong
          | {{ url.campaign.name }}
  .col-sm-4
    h2.ng-binding.text-center Rango de Fechas
    input#daterange.input-sm.form-control.text-center.date-picker date-range-picker='' options="opts" ng-model="date" type="text" placeholder='Selecciones fechas a consultar' /
    button.btn.btn-primary.btn-block onClick="get_report()" Generar Reporte
  .col-sm-offset-4.col-sm-4
    div ng-if="url.next_url != nil"
      a.btn.btn-outline.btn-info.pull-right ui-sref='viewCampaignUrl({ id: url.next_url.id })'
        | Siguiente
        i.fa.fa-arrow-right
    div ng-if="url.previous_url != nil"
      a.btn.btn-outline.btn-info.pull-left ui-sref='viewCampaignUrl({ id: url.previous_url.id })'
        i.fa.fa-arrow-left  Anterior
div#url_id data="{{ url.id }}"
.wrapper.wrapper-content
  .ibox-content.m-b-sm.border-bottom
    .text-center.p-lg
      button.btn.btn-success.btn-stadistic-update ng-click="update_stadistics()" ng-if="user.admin"
        | Actualizar Estadísticas
      h2
        | {{ url.title }}
    .screenshot
      img.center-block.img-responsive ng-src="{{ url.screenshot.url }}"
    .row
      .text-center.p-lg
        h3
          | Ultima Actualizacion:
          strong#data_updated_at.color_updated_at data-date="{{ url.created_at }}"
            | {{ url.data_updated_at | date:'d / MM / yyyy, h:mm:ss a UTC-3' }}
        span.color_updated_at
          i.fa.fa-info-circle.fa-lg
          span#text-updated-at
        br
        b
        span ng-if="user.admin"
          h4 Etiquetas
        div  ng-if="user.admin" ng-repeat="tag_name in url.tag_names"
          b
            |  {{ tag_name.key }} :
          span
            |  {{ tag_name.value }}

  .row
    .col-lg-12
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-primary.pull-right Google Analytics
          h5 Visitas
        .ibox-content
          h1.no-margins
            | {{ url.totals_stadistics.pageviews }}
          small Visitas
    .col-lg-4.col-md-4.col-sm-6
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-warning.pull-right DoubleClick
          h5 Impresiones
        .ibox-content
          h1.no-margins
            div ng-if="url.publicity == true"
              | {{ url.stadistics.dfp_stadistics.impressions }}
            div ng-if="url.publicity != true"
              | 0
          small Impresiones de Anuncios
    .col-lg-4.col-md-4.col-sm-6
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-warning.pull-right DoubleClick
          h5 Clicks
        .ibox-content
          h1.no-margins
            div ng-if="url.publicity == true"
              | {{ url.stadistics.dfp_stadistics.clicks }}
            div ng-if="url.publicity != true"
              | 0
          small Clicks en Anuncios
    .col-lg-4.col-md-4.col-sm-6
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-warning.pull-right DoubleClick
          h5 CTR
        .ibox-content
          h1.no-margins
            div ng-if="url.publicity == true"
              | {{ url.stadistics.dfp_stadistics.ctr | number: 2 }}%
            div ng-if="url.publicity != true"
              | 0 %
          small % de clicks en Anuncios
    .col-lg-4.col-md-4.col-sm-6
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-success.pull-right Facebook
          h5 Shares
        .ibox-content
          h1.no-margins
            | {{ url.facebook_shares }}
          small Veces Compartido
    .col-lg-4.col-md-4.col-sm-6
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-success.pull-right Facebook
          h5 Likes
        .ibox-content
          h1.no-margins
            | {{ url.facebook_likes }}
          small Me gusta!
    .col-lg-4.col-md-4.col-sm-6
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-success.pull-right Facebook
          h5 Comments
        .ibox-content
          h1.no-margins
            | {{ url.facebook_comments }}
          small Veces Comentado
    div ng-if="url.fb_posts_totals.fb_posts_count >= 1"
      .col-lg-4.col-md-4.col-sm-6
        .ibox.float-e-margins.text-center
          .ibox-title
            span.label.label-success.pull-right Facebook
            h5 Personas Alcanzadas
          .ibox-content
            h1.no-margins
              | {{ url.fb_posts_totals.people_reached }}
            small Personas Alcanzadas
      .col-lg-4.col-md-4.col-sm-6
        .ibox.float-e-margins.text-center
          .ibox-title
            span.label.label-success.pull-right Facebook
            h5 Impresiones
          .ibox-content
            h1.no-margins
              | {{ url.fb_posts_totals.impressions }}
            small Veces Mostrado
      .col-lg-4.col-md-4.col-sm-6
        .ibox.float-e-margins.text-center
          .ibox-title
            span.label.label-success.pull-right Facebook
            h5 Impresiones A-B
          .ibox-content
            h1.no-margins
              | {{ url.fb_posts_totals.ab_impressions }}
            small En {{ url.fb_posts_totals.ab_posts_count }} facebook posts
      
    .col-lg-4.col-md-4.col-sm-6
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-danger.pull-right Google Analytcis
          h5 Atención
        .ibox-content
          h1.no-margins
            | {{ url.attention | number: 2}}
          small Tiempo de Atención Total (Horas)
    .col-lg-4.col-md-4.col-sm-6
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-danger.pull-right Google Analytcis
          h5 Usuarios
        .ibox-content
          h1.no-margins
            | {{ url.totals_stadistics.users }}
          small Usuarios Unicos
    .col-lg-4.col-md-4.col-sm-6
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-danger.pull-right Google Analytics
          h5 Tiempo Promedio
        .ibox-content
          h1.no-margins
            | {{ url.totals_stadistics.avgtimeonpage }}
          small Tiempo promedio (Min)
  .row
    .col-lg-6.col-md-6.col-sm-6
      .ibox.float-e-margins
        .ibox-title
          h5 Distribucion de Dispositivos
        .ibox-content
          .col-lg-8
            div
              canvas#device_chart height='150'
          .col-lg-4
            #device_legend
          .clearfix
    .col-lg-6.col-md-6.col-sm-6
      .ibox.float-e-margins
        .ibox-title
          h5 Distribucion de Tipos de Trafico
        .ibox-content
          .col-lg-8
            div
              canvas#traffic_chart height='150'
          .col-lg-4
            #traffic_legend
          .clearfix
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          h5 Ultimos 7 dias de progreso
        .ibox-content
          .row
            .col-lg-9
              .flot-chart
                #flot-dashboard-chart.flot-chart-content
            .col-lg-3
              ul.stat-list
                li#visits-percent
                  h2.no-margins#total-visits
                  small Total de visitas
                  .stat-percent
                    | 0%
                    i.fa.fa-level-up.text-navy
                  .progress.progress-mini
                    .progress-bar style=("width: 0%;")
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          h5 Visitas por pais
        .ibox-content
          .row
            .col-lg-6
              table.table.table-hover.margin.bottom
                thead
                  tr
                    th Pais
                    th.text-center Visitas
                tbody.table-country

            .col-lg-6
              #world-map style=("height: 300px;")
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
         h5 Reacciones
        .ibox-content
          .row
            .col-lg-12
              .ds-vc-widget.tag-list ng-repeat="reaction in reactions"
                .ds-vc-category.grow
                  a.ds-vc-category-icon
                    img.center-block.img-responsive src="{{ reaction.avatar.url }}"
                  .ds-vc-category-stats ng-repeat="u in url.count_votes"
                    span ng-if="u.reaction_id==reaction.id"
                      p
                        strong.text-center
                          | {{ u.title }}
                      p
                        | {{ u.counts }}
= javascript_include_tag 'graphics'

scss:
  .ds-vc-feelback-title {
    display: inline-block;
    -webkit-font-smoothing: antialiased;
    border-style: solid;
    background-color: transparent;
    color: #000;
    font-size: 16px;
    font-weight: 700;
    font-family: Helvetica,Arial,sans-serif;
    border-width: 0;
    border-color: #000;
    padding: 0;
  }
  .ds-vc-widget {
    display: block;
    width: 100%;
  }

  .ds-vc-category {
    float: left;
    text-align: center;
    width: 18%;
    margin: 0 1%;
    a {
      text-decoration: none;
      color: #3d3d3d;
      cursor: pointer;
      img {
        height: 60px;
        width: 60px;
        border-style: none;
      }
      .ds-vs-category-icon-text {
        padding: 3px 6px;
        margin: 0;
      }
    }
  }
