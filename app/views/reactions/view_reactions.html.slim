
h2.ds-vc-feelback-title ¿Cuál es tu reacción?
.ds-vc-widget.tag-list ng-repeat="reaction in reactions"
  .ds-vc-category.grow ng-click="addVote(reaction.id, url_path)"
    a.ds-vc-category-icon
      img.center-block.img-responsive ng-src="{{ reaction.avatar.url }}"
    .ds-vc-category-stats ng-repeat="url in reactions_url"
      span ng-if="url.reaction_id==reaction.id"
        | {{ url.counts }}

scss:
  body{
    margin: 0;
    background-color: white;
  }
  .ds-vc-feelback-title {
    display: inline-block;
    -webkit-font-smoothing: antialiased;
    border-style: solid;
    background-color: transparent;
    color: #000;
    font-size: 16px;
    font-weight: 700;
    font-family: Helvetica,Arial,sans-serif;
    border-width: 0;
    border-color: #000;
    padding: 0;
  }
  .ds-vc-widget {
    display: block;
    width: 100%;
  }

  .top-navigation #page-wrapper{
    background-color: white;
  }
  .ds-vc-category {
    float: left;
    text-align: center;
    width: 18%;
    margin: 0 1%;
    a {
      text-decoration: none;
      color: #3d3d3d;
      cursor: pointer;
      img {
        height: 60px;
        width: 60px;
        border-style: none;
      }
      .ds-vs-category-icon-text {
        padding: 3px 6px;
        margin: 0;
      }
    }
  }

  .grow { transition: all .2s ease-in-out; }
  .grow:hover { transform: scale(1.4); }



