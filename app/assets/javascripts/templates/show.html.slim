.row.wrapper.border-bottom.white-bg.page-heading
  .col-sm-4
    h2 Campa&ntilde;a: {{ url.campaign.name }} 
    ol.breadcrumb
      li
        a href="/"  Inicio
      li 
        a href='/' ui-sref="campaigns" Campa&ntilde;as
      li.active
        strong 
          | {{ url.campaign.name }}

div#url_id data="{{ url.id }}"
.wrapper.wrapper-content
  .ibox-content.m-b-sm.border-bottom
    .text-center.p-lg
      h2 
        | {{ url.title }}
  .row
    .col-lg-3
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-success.pull-right Facebook
          h5 Total
        
        .ibox-content
          h1.no-margins 
            | {{ url.social_count.facebook }}
          small Veces Compartido
    .col-lg-3
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-info.pull-right Twitter
          h5 Total
        .ibox-content
          h1.no-margins 
            | {{ url.social_count.twitter }}
          small Veces Compartido
    .col-lg-3
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-primary.pull-right Google Analytics
          h5 Visitas
        .ibox-content
          h1.no-margins 
            | {{ url.analytics_data.table.visitors }}
          small Visitas
    .col-lg-3
      .ibox.float-e-margins.text-center
        .ibox-title
          span.label.label-danger.pull-right Google Analytics
          h5 Tiempo en Pagina
        .ibox-content
          h1.no-margins
            | {{ url.analytics_data.table.avgtimeonpage | number: 2 }}
          small Tiempo promedio en la pagina (Seg)
  .row
    .col-lg-6
      .ibox.float-e-margins
        .ibox-title
          h5 Distribucion de Dispositivos
        .ibox-content
          .col-lg-8
            div
              canvas#device_chart height='150'
          .col-lg-4
            #device_legend
          .clearfix
    .col-lg-6
      .ibox.float-e-margins
        .ibox-title
          h5 Distribucion de Tipos de Trafico
        .ibox-content
          .col-lg-8
            div
              canvas#traffic_chart height='150'
          .col-lg-4
            #traffic_legend
          .clearfix
  .row
    .col-lg-12
      .ibox.float-e-margins
        .ibox-title
          h5 Ultimos 7 dias de progreso
        .ibox-content
          .row
            .col-lg-9
              .flot-chart
                #flot-dashboard-chart.flot-chart-content
            .col-lg-3
              ul.stat-list
                li
                  h2.no-margins#total-visits 
                  small Total de visitas
                  .stat-percent
                    | 48%
                    i.fa.fa-level-up.text-navy
                  .progress.progress-mini
                    .progress-bar style=("width: 48%;") 
                li
                  h2.no-margins#total-time
                  small Tiempo promedio (Min)
                  .stat-percent
                    | 60%
                    i.fa.fa-level-down.text-navy
                  .progress.progress-mini
                    .progress-bar style=("width: 60%;") 

      .row
        .col-lg-12
          .ibox.float-e-margins
            .ibox-title
              h5 Visitas por pais
              .ibox-tools
                a.collapse-link
                  i.fa.fa-chevron-up
                a.close-link
                  i.fa.fa-times
            .ibox-content
              .row
                .col-lg-6
                  table.table.table-hover.margin.bottom
                    thead
                      tr
                        th Pais
                        th.text-center Visitas
                    tbody.table-country
                    
                .col-lg-6
                  #world-map style=("height: 300px;")

= javascript_include_tag 'graphics'
